
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @list.photo.attached? ? cl_image_path(@list.photo.key) : asset_path('list_background.jpg') %>);">
  <div class="container">
    <h1><%= @list.name %></h1>
    <p class="button"><%= link_to new_list_bookmark_path(@list.id) do %>
     Add a new Bookmark
  <% end %></p>
      <p class="button"><%= link_to "delete this list", list_path(@list), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
  </p>
  </div>
</div>

<div class = "cards">
 <% @list.bookmarks.each do |bookmark|  %>
  <div class="card-trip">
    <img src= <%= bookmark.movie.poster_url%> />
    <div class="card-trip-infos">
        <h2><%= bookmark.movie.title %><span class="text-muted font-weight-normal">â€¢ <small><%= bookmark.movie.rating %> <i class="fas fa-star star-yellow"></i></small></span></h2>
        <p><%= bookmark.movie.overview %></p>
    </div>
    <div class= "comment-container">
      <div class="comment">
        <i class="fa-solid fa-quote-left"></i>
        <p><small><%= bookmark.comment %></small></p>
      </div>
      <div class="delete">
        <p><i class="fa-solid fa-trash-can"><%= link_to "Delete",
           bookmark_path(bookmark),
           data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></i>
        </p>
      </div>
    </div>
  </div>
<% end %>
</div>
