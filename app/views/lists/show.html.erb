

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://i.picsum.photos/id/1008/5616/3744.jpg?hmac=906z84ml4jhqPMsm4ObF9aZhCRC-t2S_Sy0RLvYWZwY);">
  <div class="container">
    <h1><%= @list.name %></h1>
    <p class="button"><%= link_to new_list_bookmark_path(@list.id) do %>
     Add a new Bookmark
  <% end %></p>
      <p class="button"><%= link_to link_to lists_path do %>
     Back to lists
  <% end %></p>
  </div>
</div>

<div class = "cards">
 <% @list.bookmarks.each do |bookmark|  %>
<div class="card-trip">
    <img src= <%= bookmark.movie.poster_url%> />
  <div class="card-trip-infos">
    <div>
      <h2><%= bookmark.movie.title %></h2>
      <p><%= bookmark.movie.overview %></p>
    </div>
      <h2 class="card-trip-pricing"><%= bookmark.movie.rating %></h2>
       <p>
        <%= link_to "Delete",
           bookmark_path(bookmark),
           data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
           </p>
  </div>
  </div>
<% end %>
</div>
